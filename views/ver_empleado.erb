<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="forms">Ver empleado</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5 col-lg-offset-1">


          <div class="form-group">
            <label class="control-label" for="empleado_ci">Ci:</label>
            <label class="control-label col-lg-offset-1" for="empleado_ci"><%= @empleado.ci %></label>
          </div>

          <div class="form-group">

            <label class="control-label" for="empleado_nombre">Nombre:</label>
            <label class="control-label col-lg-offset-1" for="empleado_nombre"><%= @empleado.nombre %></label>
          </div>

          <div class="form-group">
            <label class="control-label" for="empleado_apellido">Apellido:</label>
            <label class="control-label col-lg-offset-1" for="empleado_apellido"><%= @empleado.apellido %></label>
          </div>

          <div class="form-group">
            <label class="control-label" for="fecha_de_contrato">Contratado en: </label>
            <label class="control-label col-lg-offset-1" for="fecha_de_contrato"><%= @empleado.fecha_inicio_contrato %></label>
          </div>

          <div class="form-group">
            <label class="control-label">Tipo de Contrato:</label>
            <label class="control-label col-lg-offset-1" for="tipo_contrato"><%= if @empleado.contrato_mensual? then "Mensual" else "Quincenal" end %></label>
          </div>

          <div class="form-group">
            <label for="select" class="control-label">Tipo de Salario: </label>
            <label class="control-label col-lg-offset-1" for="tipo_salario"><%= if @empleado.salario_fijo? then "Salario Fijo" else "Salario Por Hora" end %></label>
          </div>

          <!--<div class="form-group">
            <label class="control-label" for="empleado_salario">Salario:</label>
            <label class="control-label col-lg-offset-1" for="empleado_salario"><%= #@empleado.salario %></label>
          </div> -->

    </div> 
  </div>

</div>