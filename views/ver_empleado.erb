<div class="container">

  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="forms">Ver empleado</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-9 col-lg-offset-1">
      <div class="form-group">
        <label class="col-md-5 control-label" for="empleado_ci">Ci:</label>
        <label class="col-md-2 control-label col-lg-offset-1" for="empleado_ci"><%= @empleado.ci %></label>
      </div>
      <div class="form-group">
        <label class="col-md-5 control-label" for="empleado_nombre">Nombre:</label>
        <label class="col-md-2 control-label col-lg-offset-1" for="empleado_nombre"><%= @empleado.nombre %></label>
      </div>

      <div class="form-group">
        <label class="col-md-5 control-label" for="empleado_apellido">Apellido:</label>
        <label class="col-md-2 control-label col-lg-offset-1" for="empleado_apellido"><%= @empleado.apellido %></label>
      </div>

      <div class="form-group">
        <label class="col-md-5 control-label" for="fecha_de_contrato">Contratado en: </label>
        <label class="col-md-2 control-label col-lg-offset-1" for="fecha_de_contrato"><%= @empleado.fecha_inicio_contrato %></label>
      </div>

      <div class="form-group">
        <label class="col-md-5 control-label">Tipo de Contrato:</label>
        <label class="col-md-2 control-label col-lg-offset-1" for="tipo_contrato"><%= @empleado.tipo_contrato %></label>
      </div>

      <div class="form-group">
        <label class="col-md-5 control-label">Tipo de Salario: </label>
        <label class="col-md-2 control-label col-lg-offset-1" for="tipo_salario"><%= @empleado.tipo_salario %></label>
      </div>

      <div class="form-group">
        <label class="col-md-5 control-label" for="empleado_salario">Salario:</label>
        <label class="col-md-2 control-label col-lg-offset-1" for="empleado_salario"><%= @empleado.devolver_salario %></label>
      </div>

    </div> 
  </div>

</div>